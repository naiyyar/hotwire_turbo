<h1>Movies</h1>

<div id="search-movie-form">
  <%= form_with url: search_movies_path, method: :post, data: { controller: 'debounce', debounce_target: 'form' } do |f|%>
    <%= f.search_field :title_search, data: { action: 'input->debounce#search' } %>
  <%end%>
</div>

<div id='movies-search-results'>
  
</div>

<div id="movies">
  <%= render @movies %>
</div>