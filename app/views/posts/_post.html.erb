<div id="<%= dom_id post %>" style="background-color: #ddd;margin-bottom: 4px;padding: 2px !important;">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <%= button_to "Edit", edit_post_path(post), data: { turbo_frame: 'modal' } %>
  <%= button_to "Delete", post, method: :delete %>

</div>
